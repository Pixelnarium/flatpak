{
    "name": "sdl2-compat",
    "buildsystem": "cmake-ninja",
    "builddir": true,
    "config-opts": [
        "-DCMAKE_INSTALL_PREFIX=/app",
        "-DSDL_STATIC=OFF",
        "-DSDL_DLOPEN=ON",
        "-DSDL_RPATH=OFF"
    ],
    "sources": [
