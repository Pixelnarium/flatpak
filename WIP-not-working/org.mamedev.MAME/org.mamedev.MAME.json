{
  "id": "org.mamedev.MAME",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.9",
  "sdk": "org.kde.Sdk",
  "command": "mame-wrapper",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--share=network",
    "--device=all",
    "--socket=pulseaudio",
    "--persist=.mame"
  ],
  
  "modules": [
    {
      "name": "mame",
      "buildsystem": "simple",
      "build-commands": [
        "make -j$FLATPAK_BUILDER_N_JOBS TOOLS=0 SOURCES=src/mame/drivers/pacman.cpp",
        "install -Dm755 mame64 /app/data/mame/mame",
        "install -Dm644 src/osd/modules/opengl/shader/glsl*.*h -t /app/data/mame/shader/",
        "cp -ar {artwork,bgfx,plugins,language,ctrlr,keymaps,hash} /app/data/mame/" 
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/mamedev/mame/archive/mame0200.tar.gz",
          "sha256": "a6c43323e120f55b32c072726bdda357aa221a599070989b6e3406ee4e3983fe"
        }
      ]
    },
    {
      "name": "launcher-wrapper",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 mame-wrapper.sh /app/bin/mame-wrapper"
      ],
      "sources": [
        {
          "type": "file",
          "path": "mame-wrapper.sh"
        }
      ]
    }
  ]
}
