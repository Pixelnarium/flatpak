{
  "app-id": "org.libretro.RetroArch",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "19.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "retroarch",
  "rename-desktop-file": "retroarch.desktop",
  "rename-icon": "retroarch",
  "finish-args": [
    "--socket=x11",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--share=ipc",
    "--share=network",
    "--device=all",
    "--allow=multiarch",
    "--talk-name=org.freedesktop.ScreenSaver"
  ],
  "modules": [
    "../sdl2.json",
    {
      "name": "lame",
      "config-opts": [
        "--disable-static",
        "--enable-shared",
        "--disable-frontend"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://downloads.sourceforge.net/lame/lame-3.100.tar.gz",
          "sha256": "ddfe36cab873794038ae2c1210557ad34857a4b6bdc515785d1da9e175b1da1e"
        }
      ]
    },
    {
      "name": "retroarch",
      "config-opts": [
        "--enable-dbus"
      ],
      "make-args": [
        "GLOBAL_CONFIG_DIR=${FLATPAK_DEST}/etc"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/libretro/RetroArch.git",
          "tag": "v1.8.6"
        },
        {
          "type": "file",
          "path": "org.libretro.RetroArch.appdata.xml"
        },
        {
          "type": "file",
          "path": "retroarch.cfg"
        }
      ],
      "post-install": [
        "mkdir -p ${FLATPAK_DEST}/share/icons/hicolor/scalable/apps/",
        "mv /app/share/pixmaps/retroarch.svg ${FLATPAK_DEST}/share/icons/hicolor/scalable/apps/",
        "rmdir ${FLATPAK_DEST}/share/pixmaps/",
        "mkdir -p ${FLATPAK_DEST}/etc",
        "sed s:@prefix@:${FLATPAK_DEST}:g retroarch.cfg > ${FLATPAK_DEST}/etc/retroarch.cfg",
        "mkdir -p ${FLATPAK_DEST}/share/appdata",
        "cp org.libretro.RetroArch.appdata.xml ${FLATPAK_DEST}/share/appdata"
      ]
    },
    {
      "name": "retroarch-filers-video",
      "subdir": "gfx/video_filters",
      "make-install-args": [
        "PREFIX=${FLATPAK_DEST}"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/libretro/RetroArch.git"
        }
      ]
    },
    {
      "name": "retroarch-filers-audio",
      "subdir": "libretro-common/audio/dsp_filters",
      "make-install-args": [
        "PREFIX=${FLATPAK_DEST}"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/libretro/RetroArch.git"
        }
      ]
    },
    {
      "name": "retroarch-assets",
      "make-install-args": [
        "PREFIX=${FLATPAK_DEST}"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/libretro/retroarch-assets.git"
        }
      ]
    },
    {
      "name": "libretro-database",
      "make-install-args": [
        "PREFIX=${FLATPAK_DEST}"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/libretro/libretro-database.git"
        }
      ]
    },
    {
      "name": "libretro-core-info",
      "make-install-args": [
        "PREFIX=${FLATPAK_DEST}"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/libretro/libretro-core-info.git"
        }
      ]
    },
    {
      "name": "retroarch-joypad-autoconfig",
      "make-install-args": [
        "PREFIX=${FLATPAK_DEST}"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/libretro/retroarch-joypad-autoconfig.git"
        }
      ]
    },
    {
      "name": "slang-shaders",
      "make-install-args": [
        "PREFIX=${FLATPAK_DEST}"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/libretro/slang-shaders.git"
        }
      ]
    },
    {
      "name": "glsl-shaders",
      "make-install-args": [
        "PREFIX=${FLATPAK_DEST}"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/libretro/glsl-shaders.git"
        }
      ]
    },
    {
      "name": "overlay",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p ${FLATPAK_DEST}/share/libretro/overlay",
        "mv * ${FLATPAK_DEST}/share/libretro/overlay/"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/libretro/common-overlays.git"
        }
      ]
    }
  ]
}
