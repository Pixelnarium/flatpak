{
  "name": "sdl2",
  "buildsystem": "cmake-ninja",
  "builddir": true,
  "config-opts": [
    "-DCMAKE_INSTALL_PREFIX=/app",
    "-DSDL_STATIC=OFF",
    "-DSDL_DLOPEN=ON",
    "-DARTS=OFF",
    "-DESD=OFF",
    "-DNAS=OFF",
    "-DALSA=OFF",
    "-DPULSEAUDIO_SHARED=ON",
    "-DVIDEO_WAYLAND=ON",
    "-DRPATH=OFF",
    "-DCLOCK_GETTIME=ON"
  ],
  "sources": [
    {
      "type": "archive",
      "url": "https://www.libsdl.org/release/SDL2-2.0.12.tar.gz",
      "sha256": "349268f695c02efbc9b9148a70b85e58cefbbf704abd3e91be654db7f1e2c863"
    }
  ],
  "cleanup": [
    "/bin",
    "/share/man",
    "/share/aclocal",
    "/include",
    "/lib/pkgconfig",
    "/lib/*.la",
    "/lib/*.a"
  ]
}
