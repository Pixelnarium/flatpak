{
  "app-id": "io.mgba.mGBA",
  "runtime": "org.kde.Platform",
  "sdk": "org.kde.Sdk",
  "runtime-version": "5.14",
  "command": "mgba-qt",
  "rename-desktop-file": "mgba-qt.desktop",
  "rename-icon": "mgba",
  "finish-args": [
    "--device=all",
    "--socket=pulseaudio",
    "--socket=x11",
    /* SDL needs to be able to talk to UPower */
    "--system-talk-name=org.freedesktop.UPower"
  ],
  "modules": [
    "../sdl2.json",
    {
      "name": "mgba",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DCMAKE_INSTALL_LIBDIR=lib"
      ],
      "build-commands": [
        "install -Dm644 io.mgba.mGBA.appdata.xml /app/share/appdata/io.mgba.mGBA.appdata.xml"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/mgba-emu/mgba/archive/0.8.1.tar.gz",
          "sha256": "df136ea50c9cca380ab93e00fd8d87811e41a49a804c5b0e018babef0c490f13"
        },
        {
          "type": "file",
          "path": "io.mgba.mGBA.appdata.xml"
        }
      ]
    }
  ]
}
