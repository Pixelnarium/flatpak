{
  "app-id": "io.github.Mednafen",
  "runtime": "org.freedesktop.Platform",
  "sdk": "org.freedesktop.Sdk",
  "runtime-version": "19.08",
  "command": "mednafen",
  "rename-desktop-file": "mednafen.desktop",
  "rename-icon": "buggy",
  "finish-args": [
    "--device=all",
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--persist=.mednafen"
  ],
  "modules": [
    "../shared-modules/glu/glu-9.json",
    "../sdl2.json",
    {
      "name": "mednafen",
      "post-install": [
        "mkdir -p /app/share/applications",
        "mkdir -p /app/share/appdata/",
        "mkdir -p /app/share/icons/hicolor/scalable/apps",
        "install -Dm644 mednafen.desktop /app/share/applications/",
        "install -Dm644 io.github.Mednafen.appdata.xml /app/share/appdata/",
        "install -Dm644 buggy.svg /app/share/icons/hicolor/scalable/apps/buggy.svg"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://mednafen.github.io/releases/files/mednafen-1.24.2.tar.xz",
          "sha256": "1169ded285bb56d359973d3d332f28e5d2e9e41768a9932383d1a0ef63057c6c"
        },
        {
          "type": "file",
          "path": "io.github.Mednafen.appdata.xml"
        },
        {
          "type": "file",
          "path": "mednafen.desktop"
        },
        {
          "type": "file",
          "path": "buggy.svg"
        }
      ]
    }
  ]
}
