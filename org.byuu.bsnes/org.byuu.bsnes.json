{
  "app-id": "org.byuu.bsnes",
  "runtime": "org.freedesktop.Platform",
  "sdk": "org.freedesktop.Sdk",
  "runtime-version": "18.08",
  "command": "bsnes-padsp",
  "rename-desktop-file": "bsnes.desktop",
  "rename-icon": "bsnes",
  "finish-args": [
    "--device=all",
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--persist=."
  ],
  "cleanup": [
    "/include",
    "/share/man",
    "/share/info",
    "/share/gtk-doc",
    "/share/aclocal",
    "*.la",
    "*.a"
  ],
  "modules": [
    "shared-modules/gtk2/gtk2.json",
    {
      "name": "gtksourceview2",
      "sources": [
        {
          "type": "archive",
          "url": "https://download.gnome.org/sources/gtksourceview/2.10/gtksourceview-2.10.5.tar.bz2",
          "sha256": "c585773743b1df8a04b1be7f7d90eecdf22681490d6810be54c81a7ae152191e"
        }
      ]
    },
    {
      "name": "p7zip",
      "cleanup": [
        "*"
      ],
      "buildsystem": "simple",
      "build-commands": [
        "make all3",
        "make install DEST_DIR=/ DEST_HOME=/app"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://downloads.sourceforge.net/project/p7zip/p7zip/16.02/p7zip_16.02_src_all.tar.bz2",
          "sha256": "5eb20ac0e2944f6cb9c2d51dd6c4518941c185347d4089ea89087ffdd6e2341f"
        }
      ]
    },
    {
      "name": "libao",
      "sources": [
        {
          "type": "git",
          "url": "https://git.xiph.org/libao.git",
          "commit": "20dc8ed9fa4605f5c25e7496ede42e8ba6468225",
          "disable-shallow-clone": true
        }
      ]
    },
    {
      "name": "bsnes",
      "buildsystem": "simple",
      "build-commands": [
        "7z x bsnes_v107-source.7z",
        "mv bsnes_v107-source/* .",
        "sed -i '/^prefix/c\prefix := /app' nall/GNUmakefile",
        "sed -i 's|input.xlib input.udev|input.xlib|g' ruby/GNUmakefile",
        "make -j$FLATPAK_BUILDER_N_JOBS -C higan",
        "make -j$FLATPAK_BUILDER_N_JOBS -C icarus",
        "make -C higan install",
        "make -C icarus install",
        "mkdir -p /app/share/icons/hicolor/scalable/apps/",
        "install -Dm644 higan/target-bsnes/resource/bsnes.svg /app/share/icons/hicolor/scalable/apps/bsnes.svg",
        "sed -i 's/mm/px/g' icarus/data/icarus.svg",
        "install -Dm644 icarus/data/icarus.svg /app/share/icons/hicolor/scalable/apps/org.byuu.bsnes.icarus.svg",
        "mv /app/share/applications/icarus.desktop /app/share/applications/org.byuu.bsnes.icarus.desktop",
        "sed -i '/^Icon/c\Icon=org.byuu.bsnes.icarus' /app/share/applications/org.byuu.bsnes.icarus.desktop",
        "install -Dm755 bsnes-padsp.sh /app/bin/bsnes-padsp",
        "sed -i '/^Exec/c\Exec=bsnes-padsp' /app/share/applications/bsnes.desktop"
      ],
      "post-install": [
        "mkdir -p /app/share/metainfo/",
        "install -Dm644 org.byuu.bsnes.appdata.xml /app/share/metainfo/"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://download.byuu.org/bsnes_v107-source.7z",
          "sha256": "7b7fa745ce593f9912ce116bdf009cd2e70eb034cd7186264c4abedb87a5da36"
        },
        {
          "type": "file",
          "path": "org.byuu.bsnes.appdata.xml"
        },
        {
          "type": "file",
          "path": "bsnes-padsp.sh"
        }
      ]
    }
  ]
}
