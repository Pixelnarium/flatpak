{
  "id": "org.residualvm.ResidualVM",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "19.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "residualvm",
  "rename-icon": "residualvm",
  "rename-desktop-file": "residualvm.desktop",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--share=network",
    "--device=all",
    "--socket=pulseaudio"
  ],
  "modules": [
    "../shared-modules/glu/glu-9.json",
    "../shared-modules/libmad/libmad.json",
    {
      "name": "glew",
      "no-autogen": true,
      "make-args": [
        "GLEW_PREFIX=/app",
        "GLEW_DEST=/app",
        "LIBDIR=/app/lib"
        ],
        "make-install-args": [
          "GLEW_PREFIX=/app",
          "GLEW_DEST=/app",
          "LIBDIR=/app/lib"
        ],
        "sources": [
          {
            "type": "archive",
            "url": "https://downloads.sourceforge.net/project/glew/glew/2.1.0/glew-2.1.0.tgz",
            "sha256": "04de91e7e6763039bc11940095cd9c7f880baba82196a7765f727ac05a993c95"
          }
        ],
        "cleanup": [
          "/include",
          "/lib/pkgconfig"
        ]
    },    
    {
      "name": "libmpeg2",
      "config-opts": [ "--enable-shared", "--disable-static" ],
      "rm-configure": true,
      "cleanup": [ "/bin/*mpeg2*" ],
      "sources": [
        {
          "type": "archive",
          "url": "http://libmpeg2.sourceforge.net/files/libmpeg2-0.5.1.tar.gz",
          "sha256": "dee22e893cb5fc2b2b6ebd60b88478ab8556cb3b93f9a0d7ce8f3b61851871d4"
        },
        {
          "type": "patch",
          "path": "libmpeg2-inline.patch"
        },
        {
          "type":"script",
          "commands":[
            "autoreconf -fiv"
          ],
          "dest-filename":"autogen.sh"
        }
      ]
    },
    {
      "name": "residualvm",
      "config-opts": [
        "--disable-debug",
        "--enable-release",
        "--enable-glew"
      ],
      "post-install": [
        "install -Dm644 org.residualvm.ResidualVM.metainfo.xml /app/share/metainfo/org.residualvm.ResidualVM.metainfo.xml"

      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/residualvm/residualvm.git"
        },
        {
          "type": "file",
          "path": "org.residualvm.ResidualVM.metainfo.xml"
        }
      ]
    }
  ]
}
