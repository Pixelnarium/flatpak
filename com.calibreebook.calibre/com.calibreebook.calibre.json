{
  "id": "com.calibreebook.calibre",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "18.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "calibre",
  "rename-icon": "calibre-gui",
  "rename-appdata-file": "calibre-gui.appdata.xml",
  "rename-desktop-file": "calibre-gui.desktop",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--share=network",
    "--socket=pulseaudio",
    "--persist=."
  ],
  "modules": [
    {
      "name": "libatomic_ops",
      "cleanup": ["*"],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/ivmai/libatomic_ops//releases/download/v7.6.6/libatomic_ops-7.6.6.tar.gz",
          "sha256": "99feabc5f54877f314db4fadeb109f0b3e1d1a54afb6b4b3dfba1e707e38e074"
        }
      ]
    },
    {
      "name": "gc",
      "cleanup": ["*"],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/ivmai/bdwgc/releases/download/v7.6.6/gc-7.6.6.tar.gz",
          "sha256": "e968edf8f80d83284dd473e00a5e3377addc2df261ffb7e6dc77c9a34a0039dc"
        }
      ]
    },
    {
      "name": "w3m",
      "cleanup": ["*"],
      "config-opts": [
        "-disable-w3mmailer",
        "--disable-image"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://salsa.debian.org/debian/w3m.git"
        }
      ]
    },
    {
      "name": "xmlto",
      "cleanup": ["*"],
      "sources": [
        {
          "type": "archive",
          "url": "https://releases.pagure.org/xmlto/xmlto-0.0.28.tar.bz2",
          "sha256": "1130df3a7957eb9f6f0d29e4aa1c75732a7dfb6d639be013859b5c7ec5421276"
        }
      ]
    },
    {
      "name": "xdg-utils",
      "sources": [
        {
          "type": "archive",
          "url": "https://portland.freedesktop.org/download/xdg-utils-1.1.3.tar.gz",
          "sha256": "d798b08af8a8e2063ddde6c9fa3398ca81484f27dec642c5627ffcaa0d4051d9"
        }
      ]
    },
    {
      "name": "calibre",
      "buildsystem": "simple",
      "build-options" : { 
        "build-args": [ 
          "--share=network"
        ] 
      },
      "build-commands": [
        "mkdir -p /app/bin",
        "mkdir -p /app/share",
        "mkdir -p /app/share/appdata",
        "sh linux-installer.sh install_dir=/app/ bin_dir=/app/bin share_dir=/app/share",
        "cp -r calibre-desktop/applications /app/share/",
        "cp -r calibre-desktop/icons /app/share/",
        "cp -r calibre-desktop/mime /app/share/",
        "mv /app/metainfo/* /app/share/appdata/",
        "rmdir /app/metainfo"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://download.calibre-ebook.com/linux-installer.sh",
          "sha256": "a9a7971d23c2adc0e4cfedf7195050c7aa583b8dd01793043078c48cef2e9db5"
        },
        {
          "type": "archive",
          "path": "calibre-desktop.tar.xz",
          "strip-components": 0
        }
      ]
    }
  ]
}
