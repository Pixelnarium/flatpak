{
    "app-id": "co.uk.pcemulator.PCem",
    "runtime": "org.freedesktop.Platform",
    "sdk": "org.freedesktop.Sdk",
    "runtime-version": "23.08",
    "command": "pcem",
    "rename-desktop-file": "PCem.desktop",
    "rename-appdata-file": "pcem.appdata.xml",
    "rename-icon": "icon",
    "finish-args": [
        "--device=all",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--persist=.pcem"
    ],
    "modules": [
        {
            "name": "wxWidgets",
            "cleanup": [
                "/bin",
                "/include",
                "/share/bakefile",
                "/share/aclocal",
                "/lib/wx/include"
            ],
            "config-opts": [
                "--with-opengl",
                "--with-libjpeg",
                "--with-libpng",
                "--with-zlib",
                "--disable-sdltest",
                "--enable-unicode",
                "--enable-display",
                "--enable-propgrid",
                "--disable-webview",
                "--disable-webviewwebkit",
                "--with-expat=builtin",
                "--with-libiconv=/usr"
            ],
            "build-options": {
                "cxxflags": "-std=c++0x"
            },
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/wxWidgets/wxWidgets.git",
                    "commit": "573e56d432cc2c4b19a27aa5cad3e6045bfc542b",
                    "tag": "v3.2.5",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^v([\\d.]+)$"
                    }
                }
            ],
            "modules": [
                "../shared-modules/glu/glu-9.json"
            ]
        },
        {
            "name": "pcem",
            "config-opts": [
                "--enable-release-build",
                "--enable-networking"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/sarah-walker-pcem/pcem.git",
                    "commit": "13f53a25687be71ee3ee8482b1a90b1b0aa64fb6",
                    "tag": "v17",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^v([\\d.]+)$",
                        "is-main-source": true
                    }
                },
                {
                    "type": "shell",
                    "commands": [
                        "autoreconf -vfi"
                    ]
                }
            ]
        },
        {
            "name": "pcem-desktop-integration",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm644 PCem.desktop /app/share/applications/PCem.desktop",
                "install -Dm644 pcem.appdata.xml /app/share/appdata/pcem.appdata.xml",
                "install -Dm644 icon.png /app/share/icons/hicolor/256x256/apps/icon.png"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "PCem.desktop"
                },
                {
                    "type": "file",
                    "path": "pcem.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "icon.png"
                }
            ]
        }
    ]
}
