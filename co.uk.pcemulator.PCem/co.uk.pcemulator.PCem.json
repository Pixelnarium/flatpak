{
  "app-id": "co.uk.pcemulator.PCem",
  "runtime": "org.freedesktop.Platform",
  "sdk": "org.freedesktop.Sdk",
  "runtime-version": "20.08",
  "command": "pcem",
  "rename-desktop-file": "PCem.desktop",
  "rename-appdata-file": "pcem.appdata.xml",
  "rename-icon": "icon",
  "finish-args": [
    "--device=all",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=pulseaudio",
    "--persist=.pcem"
  ],
  "modules": [
    {
      "name": "wxWidgets",
      "cleanup": [
        "/bin",
        "/include",
        "/share/bakefile",
        "/share/aclocal",
        "/lib/wx/include"
      ],
      "config-opts": [
        "--with-opengl",
        "--with-libjpeg",
        "--with-libpng",
        "--with-zlib",
        "--disable-sdltest",
        "--enable-unicode",
        "--enable-display",
        "--enable-propgrid",
        "--disable-webkit",
        "--disable-webview",
        "--disable-webviewwebkit",
        "--with-expat=builtin",
        "--with-libiconv=/usr"
      ],
      "build-options" : {
        "cxxflags":"-std=c++0x"
      },
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/wxWidgets/wxWidgets/releases/download/v3.0.5/wxWidgets-3.0.5.tar.bz2",
          "sha256": "8aacd56b462f42fb6e33b4d8f5d40be5abc3d3b41348ea968aa515cc8285d813"
        }
      ],
      "modules": [
        "../shared-modules/glu/glu-9.json"
      ]
    },
    {
      "name": "pcem",
      "config-opts": [
        "--enable-release-build",
        "--enable-networking"
      ],
      "sources": [
        {
          "type": "archive",
          "strip-components": 0,
          "url": "http://pcem-emulator.co.uk/files/PCemV16Linux.tar.gz",
          "sha256": "45ae9321ee25375f0e685a49d84e8a5acba8ed33ccf597299edcf287cb3c8499"
        },
        {
          "type": "patch",
          "path": "use-fcommon.patch",
          "strip-components": 0
        },
        {
          "type": "shell",
          "commands": [ "autoreconf -vfi" ]
        }
      ]
    },
    {
      "name": "pcem-desktop-integration",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm644 PCem.desktop /app/share/applications/PCem.desktop",
        "install -Dm644 pcem.appdata.xml /app/share/appdata/pcem.appdata.xml",
        "install -Dm644 icon.png /app/share/icons/hicolor/256x256/apps/icon.png"
      ],
      "sources": [
        {
          "type": "file",
          "path": "PCem.desktop"
        },
        {
          "type": "file",
          "path": "pcem.appdata.xml"
        },
        {
          "type": "file",
          "path": "icon.png"
        }
      ]
    }
  ]
}
